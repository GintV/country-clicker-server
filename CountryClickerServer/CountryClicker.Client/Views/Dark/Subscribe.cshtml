@model CountryClicker.Client.Controllers.SubscriptionsModel

@{
    ViewBag.Title = "Groups To Subscribe";
    Layout = "_Layout";
}

<h1>Groups To Subscribe</h1>

<div class="form-group col-sm-12"></div>

<table class="table table-hover">
    <thead>
        <tr style="line-height: 40px; min-height: 40px; height: 40px;">
            <th>Title</th>
            <th>Score</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model.CustomGroups)
        {
            <tr style="line-height: 40px; min-height: 40px; height: 40px">
                <td>@group.Title</td>
                <td>@group.Score</td>
                <td>
                    <a href="/Dark/SubscribeGroup?id=@group.Id">
                        <svg viewBox="0 0 17 16" width="16" height="16">
                            <use xlink:href="/svg/sprite.svg#si-glyph-button-plus" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group col-sm-12"></div>

