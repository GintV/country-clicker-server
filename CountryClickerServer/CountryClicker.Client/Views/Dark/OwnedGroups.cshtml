@model IEnumerable<CountryClicker.API.Models.Get.CustomGroupGetDto>

@{
    ViewBag.Title = "Owned Groups";
    Layout = "_Layout";
}

<h1>Owned Groups</h1>

<div class="form-group col-sm-12"></div>

<table class="table table-hover">
    <thead>
        <tr style="line-height: 40px; min-height: 40px; height: 40px;">
            <th>Title</th>
            <th>Score</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var group in Model)
        {
            <tr style="line-height: 40px; min-height: 40px; height: 40px">
                <td>@group.Title</td>
                <td>@group.Score</td>
                <td>
                    <a href="#" data-href="/Dark/DeleteGroup?id=@group.Id" data-toggle="modal" data-target="#confirm-delete">
                        <svg viewBox="0 0 17 16" width="16" height="16">
                            <use xlink:href="/svg/sprite.svg#si-glyph-button-error" />
                        </svg>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="form-group col-sm-12"></div>

<div class="modal fade" id="confirm-delete" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
                <h4 class="modal-title" id="myModalLabel">Confirm Delete</h4>
            </div>

            <div class="modal-body">
                <p>You are about to delete your group, this procedure is irreversible. If you delete this group, total score and all subscriptions to this group will be lost.</p>
                <p>Do you want to proceed?</p>
                <p class="debug-url"></p>
            </div>

            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Cancel</button>
                <a class="btn btn-danger btn-ok">Delete</a>
            </div>
        </div>
    </div>
</div>